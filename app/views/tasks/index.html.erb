<h1>My Tasks</h1>

<table>
  <thead>
    <tr>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= check_box_tag "completed[]", task.id, task.completed %>&nbsp;<%= link_to task.title, task_path(task) %></td>
        <td><%= link_to 'Delete', destroy_task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add Task", new_task_path %>
