<h1>Task Details</h1>

<p><strong>Title:</strong> <%= @task.title %></p>
<p><strong>Details:</strong> <%= @task.details %></p>
<!-- <p><strong>Completed:</strong> <%= check_box_tag "completed", "completed", @task.completed, disabled: true %></p> -->

<% if @task.completed %>
  <p><%= check_box_tag "completed", "completed", true, disabled: true %> This task is completed</p>
<% else %>
  <p><%= check_box_tag "completed", "completed", false, disabled: true %> This task is not completed yet</p>
<% end %>

<%= link_to "Edit Task", edit_task_path(@task), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
<%= link_to "Back to List", tasks_path %>
